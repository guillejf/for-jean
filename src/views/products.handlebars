<h1>All Products</h1>
{{#each products}}
    <div>
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <p>Price: {{price}}</p>
        <p>{{thumbnail}}</p>
        <p>{{code}}</p>
        <p>{{stock}}</p>
        <p>{{category}}</p>
        <p>Availability: {{availability}}</p>

        <a href="/products/{{_id}}">View Details</a>
        <form action="/api/carts" method="POST">
            <input type="hidden" name="productId" value="{{_id}}">
            <button type="submit">Add to Cart</button>
        </form>
    </div>
{{/each}}

<div class="pagination">
    {{#if prevLink}}
        <a href="{{prevLink}}">Previous</a>
    {{/if}}

    {{#if nextLink}}
        <a href="{{nextLink}}">Next</a>
    {{/if}}
</div>